
{% if 'delete' in actions %}
                            <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_by_id_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~"}) }}" }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
{% endif %}
{% if 'show' in actions %}
                            <a title='Show' class="btn btn-info btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
{% endif %}
{% if 'edit' in actions %}
                            <a  title='Edit' class="btn btn-primary btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
{% endif %}
