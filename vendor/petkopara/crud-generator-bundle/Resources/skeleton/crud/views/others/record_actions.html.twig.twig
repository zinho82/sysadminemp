
<div class="form-group">
    <a class="btn btn-default" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
{% if ('edit' in actions) and (not hide_edit) %}
    <a class="btn btn-primary" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id':  " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
{% endif %}
{% if ('new' in actions) and (not hide_new) %}
    <a class="btn btn-info" href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ '{{ form_widget(delete_form) }}' }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
{% endif %}
</div>

