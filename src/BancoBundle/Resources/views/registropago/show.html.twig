{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - registropago
{% endblock %}

{% block body %}
<div class="col-lg-12 col-sm-12 col-md-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View registropago <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ registropago.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Total</strong></p>
        <p>
            {{ registropago.total }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechapago</strong></p>
        <p>
            {% if registropago.fechaPago %}{{ registropago.fechaPago|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechacobrocheque</strong></p>
        <p>
            {% if registropago.fechaCobroCheque %}{{ registropago.fechaCobroCheque|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Codigotransferencia</strong></p>
        <p>
            {{ registropago.codigoTransferencia }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerotc</strong></p>
        <p>
            {{ registropago.numeroTc }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('registropago') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('registropago_edit', { 'id':  registropago.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('registropago_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('registropago_delete', { 'id': registropago.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}

