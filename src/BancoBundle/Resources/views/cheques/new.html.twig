{% extends 'AppBundle:Layouts:layout.html.twig' %}
{% block javascript %}
    {{ parent() }}
    <script src=" {{ asset('assets/js/custom/facturas.js')}}"></script>
{% endblock %}
{% block title %} 
    {{ parent() }} - New cheque
{% endblock %}

{% block body %}
    <div class="col-lg-12 col-sm-12 col-md-12">
        <div id="top" class="row">
            <div class="page-header">
                <h2>New cheque <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
            </div>
        </div>



        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    {% for type, flashMessages in app.session.flashbag.all() %} 
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                {{ flashMessage|raw }}
                            </div>
                        {% endfor %} 
                    {% endfor %} 
                </div>
            </div>
            <div class="col-lg-8 col-sm-8-col-md-8">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <p>
                    <button type="submit" name="submit" value="save" class="btn btn-primary"> 
                        Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                    </button>
                    <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
                        Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </p>


                {{ form_end(form) }}

                <hr/>

                <div class="form-group">
                    <a class="btn btn-default" href="{{ path('cheques') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Back to list
                    </a>
                </div>
            </div>

        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="cheque">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Cheques</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render(controller("BancoBundle:Registropago:new",{'factura':factura.id})) }}
                </div>
                <div class="modal-footer">
                    <!--   <button type="button" class="btn btn-primary">Save changes</button>
                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

