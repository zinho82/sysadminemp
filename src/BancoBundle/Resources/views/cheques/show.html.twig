{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - cheque
{% endblock %}

{% block body %}
<div class="col-lg-12 col-sm-12 col-md-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View cheque <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ cheque.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerocheque</strong></p>
        <p>
            {{ cheque.numeroCheque }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechacobro</strong></p>
        <p>
            {% if cheque.fechaCobro %}{{ cheque.fechaCobro|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('cheques') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('cheques_edit', { 'id':  cheque.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('cheques_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('cheques_delete', { 'id': cheque.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>
</div>

{% endblock %}

