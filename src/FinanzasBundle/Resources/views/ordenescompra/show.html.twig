{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - ordenescompra
{% endblock %}

{% block body %}
<div class="col-lg-12 col-sm-12 col-md-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View ordenescompra <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ ordenescompra.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerooc</strong></p>
        <p>
            {{ ordenescompra.numeroOc }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechaestimadacompra</strong></p>
        <p>
            {% if ordenescompra.fechaEstimadaCompra %}{{ ordenescompra.fechaEstimadaCompra|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechaingreso</strong></p>
        <p>
            {% if ordenescompra.fechaIngreso %}{{ ordenescompra.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('ordenescompra') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('ordenescompra_edit', { 'id':  ordenescompra.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('ordenescompra_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('ordenescompra_delete', { 'id': ordenescompra.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>
</div>

{% endblock %}

