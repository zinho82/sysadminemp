{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - autorizacione
{% endblock %}

{% block body %}
<div class="col-lg-12 col-sm-12 col-md12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View autorizacione <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ autorizacione.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechaautorizacion</strong></p>
        <p>
            {% if autorizacione.fechaAutorizacion %}{{ autorizacione.fechaAutorizacion|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Comentario</strong></p>
        <p>
            {{ autorizacione.comentario }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('autorizaciones') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('autorizaciones_edit', { 'id':  autorizacione.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('autorizaciones_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('autorizaciones_delete', { 'id': autorizacione.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>
</div>

{% endblock %}

