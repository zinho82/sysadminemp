{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - contacto
{% endblock %}

{% block body %}
<div class="col-lg-12 col-md-12 col-sm-12">
<div id="top" class="row">
    <div class="page-header">
        <h2>View contacto <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ contacto.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ contacto.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Telefono</strong></p>
        <p>
            {{ contacto.telefono }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Correo</strong></p>
        <p>
            {{ contacto.correo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Cargo</strong></p>
        <p>
            {{ contacto.cargo }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('contactos') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('contactos_edit', { 'id':  contacto.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('contactos_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('contactos_delete', { 'id': contacto.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}

