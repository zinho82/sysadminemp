{% extends 'AppBundle:Layouts:layout.html.twig' %}
{% block javascript %}
    {{ parent() }}
    <script src=" {{ asset('assets/js/custom/facturas.js')}}"></script>
{% endblock %}
{% block title %}
    {{ parent() }} -  Edit factura
{% endblock %}

{% block body %}
    <div class="col-lg-12 col-sm-12 col-md-12">
        <div id="top" class="row">
            <div class="page-header">
                <h2>Edit factura <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
            </div>
        </div>



        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    {% for type, flashMessages in app.session.flashbag.all() %} 
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                {{ flashMessage|raw }}
                            </div>
                        {% endfor %} 
                    {% endfor %} 
                </div>
            </div>


            {{ form_start(edit_form) }}

            {{ form_widget(edit_form) }}
            <p>
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
                </button>
            </p>
            {{ form_end(edit_form) }}

            <hr/>


            <div class="form-group">
                <a class="btn btn-default" href="{{ path('facturas') }}">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                    Back to list
                </a>
                <a class="btn btn-info" href="{{ path('facturas_new') }}">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    New
                </a>
                <form action="{{ path('facturas_delete', { 'id': factura.id }) }}" method="post" style="display: inline-block">
                    <input type="hidden" name="_method" value="DELETE" />
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        Delete
                    </button>
                </form>
            </div>

        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="pago">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registrar Pago</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ render(controller("BancoBundle:Registropago:new",{'factura':factura.id})) }}
                </div>
                <div class="modal-footer">
                    <!--   <button type="button" class="btn btn-primary">Save changes</button>
                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                </div>
            </div>
        </div>
    </div>

{% endblock %}

