{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - rrhh
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View rrhh <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ rrhh.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ rrhh.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Apellidopaterno</strong></p>
        <p>
            {{ rrhh.apellidoPaterno }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Apellidomaterno</strong></p>
        <p>
            {{ rrhh.apellidoMaterno }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Rut</strong></p>
        <p>
            {{ rrhh.rut }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Direccion</strong></p>
        <p>
            {{ rrhh.direccion }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Comuna</strong></p>
        <p>
            {{ rrhh.comuna }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Ciudad</strong></p>
        <p>
            {{ rrhh.ciudad }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Region</strong></p>
        <p>
            {{ rrhh.region }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Sueldobruto</strong></p>
        <p>
            {{ rrhh.sueldoBruto }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Correoelectronico</strong></p>
        <p>
            {{ rrhh.correoElectronico }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('rrhh') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('rrhh_edit', { 'id':  rrhh.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('rrhh_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('rrhh_delete', { 'id': rrhh.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

