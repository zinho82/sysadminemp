{% extends 'AppBundle:Layouts:layout.html.twig' %}

{% block title %}
{{ parent() }} - empresa index
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2><a href="{{ path('empresa') }}">Empresa</a></h2>
        </div>
    </div>       

<!-- FILTERING -->
<div class="col-md-12">
    <div  id="filters" class="collapse">

        <form class="well" action="{{ path('empresa') }}" method="get" >
            <div class="row">
                 
                    <div class="col-md-6">{{ form_row(filterForm.id) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.nombre) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.rut) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.nombreFantasia) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.empresaOrigen) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.direccion) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.comuna) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.ciudad) }}</div>

                 
                    <div class="col-md-6">{{ form_row(filterForm.region) }}</div>

                                <div class="col-md-6">
                    {{ form_rest(filterForm) }}
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning" name="filter_action" value="filter"> <span class="glyphicon glyphicon-filter" aria-hidden="true"></span> Filter</button>
                        <button type="submit" class="btn btn-default" name="filter_action" value="reset"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Reset</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- END FILTERING -->


<div class="col-md-3 pull-left">
        
    <!-- PAGE SIZE -->
    <div class="pagination form-inline ">
        <select class = "form-control"  onchange="window.location = this.value" >
            <option value='{{ path('empresa', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>10</option>
            <option value='{{ path('empresa', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>20</option>
            <option value='{{ path('empresa', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>50</option>
            <option value='{{ path('empresa', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
            <option value='{{ path('empresa', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
        </select>
    </div>
    <!-- END PAGE SIZE -->

</div>

<div class="col-md-6">


</div>

<div class="col-md-3">

            <a class="btn btn-primary h3 pull-right" href="{{ path('empresa_new') }}" style="margin-bottom:10px">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
        </a>
        <a class="btn dropdown-toggle pull-right h3" data-toggle="collapse" data-target="#filters">
        Filter
        <span class="caret"></span>
    </a>
</div>







    <div class="col-md-12">
        {%- if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
    </div>

</div> <!-- /#top -->


<div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

<div class="row">

        <div class="table-responsive col-md-12">
        <form method="POST" id="bulk_form" action="{{ path('empresa_bulk_action') }} ">
            <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th width="20px"><input type="checkbox" class="check-all" onclick="toggleAll(this)"></th>

                {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
                            <th>{{macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('nombre',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('rut',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('nombreFantasia',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('empresaOrigen',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('direccion',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('comuna',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('ciudad',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
                            <th>{{macros.th_sortable('region',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'empresa')}}</th>
    
                       
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for empresa in empresas %}
                    <tr>
                        <td><input type="checkbox" name="ids[]" onclick='bulkSubmitBtnManage();' class="check-all" value="{{empresa.id}}"/></td>
                        <td><a href="{{ path('empresa_edit', { 'id': empresa.id }) }}">{{ empresa.id }}</a></td>
                        <td>{{ empresa.nombre }}</td>
                        <td>{{ empresa.rut }}</td>
                        <td>{{ empresa.nombreFantasia }}</td>
                        <td>{{ empresa.empresaOrigen }}</td>
                        <td>{{ empresa.direccion }}</td>
                        <td>{{ empresa.comuna }}</td>
                        <td>{{ empresa.ciudad }}</td>
                        <td>{{ empresa.region }}</td>
    
                        <td class="actions">
                            <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('empresa_by_id_delete', { 'id': empresa.id}) }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                            <a title='Show' class="btn btn-info btn-sm" href="{{ path('empresa_show', { 'id': empresa.id }) }}">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                            <a  title='Edit' class="btn btn-primary btn-sm" href="{{ path('empresa_edit', { 'id': empresa.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                                 <a  title='Agregar Documentos' class="btn btn-warning btn-sm" href="{{ path('documentos_add', { 'id': empresa.id,'seccion':'empresa','empresa':empresa.id }) }}">
                                <span class="fas fa-file" aria-hidden="true"></span>
                            </a>
                        </td>


                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>


        </div>
</div> <!-- /#list -->




<div class="row">
    <div class="col-md-4 pull-left">
            <div class="pagination form-inline ">
                <select class = "form-control" name="bulk_action" >
                    <option value="delete">DELETE</option>
                </select>
                <input type="submit" id='bulkSubmitBtn' onclick="return confirm('Are you sure?')" form="bulk_form" class="form-control btn btn-danger btn-sm" disabled>
            </div>
    </div>
    
    <div class='col-md-3 pagination text-center'>
         <p>{{totalOfRecordsString}}</p>
    </div>
 
    <div class="col-md-5 text-right">
         {{ pagerHtml|raw }} 
    </div>
</div> <!-- /#bottom -->



{% endblock %}

